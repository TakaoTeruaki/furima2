.header
  .header__logo
    = link_to "#", class: "logo_btn" do
      = image_tag src="/assets/logo.png", size: "185x50"
.container
  .main
    -# 商品画像
    .item-content-fild
      .item-content
        .item-dt
          .control-label 出品画像
          .required 必須
      .files
        .files__item-image-col
          = image_tag src="/assets/icon_camera.png", size: "100x100"
        .files__item-image-col
          = image_tag src="/assets/icon_camera.png", size: "100x100"
        .files__item-image-col
          = image_tag src="/assets/icon_camera.png", size: "100x100"
        .files__item-image-col
          = image_tag src="/assets/icon_camera.png", size: "100x100"
    -# 商品名/商品説明
    .item-content-fild
      .item-content
        .item-dt
          .control-label 商品名
          .required 必須
        .item-dt_text-fild
          %input.text{:name => "name", :placeholder => "40文字まで", :type => "neme", :value => ""}/
      .item-content
        .item-dt
          .control-label 商品説明
          .required 必須
        .item-dt_text-area
          %textarea{:cols => "40", :placeholder => "商品の説明", :name => "", :rows => "4"}
    -# 商品詳細/カテゴリー/サイズ/ブランド/商品の状態
    .item-content-fild
      .item-content
        %p.note 商品の詳細
        .item-dt
          .control-label カテゴリー
          .required 必須
        .item-dt_text-select
          %select{:name => "カテゴリー", :size => ""}
          %select{:name => "カテゴリー", :size => "1"}
          %select{:name => "カテゴリー", :size => "1"}
      .item-content
        .item-dt
          .control-label サイズ
          .required 必須
        .item-dt_text-select
          %select{:name => "カテゴリー", :size => "1"}
      .item-content
        .item-dt
          .control-label ブランド
          .any 任意
        .item-dt_text-fild
          %input.text{:name => "name", :placeholder => "例）シャネル", :type => "neme", :value => ""}/
      .item-content
        .item-dt
          .control-label 商品の状態
          .required 必須
        .item-dt_text-select
          %select{:name => "カテゴリー", :size => ""}
    -# 配送について/配送の負担/発送の方法/発送元の地域/発送までの日数
    .item-content-fild
      .item-content
        %p.note 配送について
        .item-dt
          .control-label 配送の負担
          .required 必須
        .item-dt_text-select
          %select{:name => "カテゴリー", :size => ""}
      .item-content
        .item-dt
          .control-label 発送の方法
          .required 必須
        .item-dt_text-select
          %select{:name => "カテゴリー", :size => ""}
      .item-content
        .item-dt
          .control-label 発送元の地域
          .required 必須
        .item-dt_text-select
          %select{:name => "カテゴリー", :size => ""}
      .item-content
        .item-dt
          .control-label 発送までの日数
          .required 必須
        .item-dt_text-select
          %select{:name => "カテゴリー", :size => ""}
    -# 価格/出品ボタン/もどるリンク
    .item-content-fild_price
      .item-content
        %p.note 価格（¥300~9,999,999)
        .item-dt-price
          .item-dt
            .control-label 価格
            .required 必須
          .item-dt_text-fild
            %input.number{:name => "name", :placeholder => "¥0", :type => "money", :value => ""}/
      .item-content-reactid
        %button.sellbtn{:name => "button", :type => "submit"}
          出品する
        %br
        %a.cta-btn{:href => "#"} もどる
.footer
  .footer__conditions
    %p プライバシーポリシー
    %p FURIMA利用規約
    %p 特定商取引に関する表記
  .footer__logo
    = image_tag src="/assets/logo-white.png", size: "185x50"
  %p© FURIMA